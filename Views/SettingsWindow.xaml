<Window x:Class="GameCheatHelper.Views.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="设置 - GameCheatHelper"
        Height="500"
        Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        FontFamily="{StaticResource DefaultFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 设置内容 -->
        <TabControl Grid.Row="0" Margin="10">
            <!-- 通用设置 -->
            <TabItem Header="通用设置">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- 游戏检测间隔 -->
                        <GroupBox Header="游戏检测" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <TextBlock Text="检测间隔 (毫秒)" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Grid.Column="0"
                                            Minimum="500"
                                            Maximum="5000"
                                            Value="{Binding DetectionInterval}"
                                            TickFrequency="500"
                                            IsSnapToTickEnabled="True"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding DetectionInterval, StringFormat={}{0} ms}"
                                               Width="80"
                                               TextAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                </Grid>
                                <TextBlock Text="较短的间隔可以更快检测到游戏，但会占用更多系统资源"
                                           Foreground="#757575"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 输入设置 -->
                        <GroupBox Header="输入设置" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <TextBlock Text="输入延迟 (毫秒)" FontWeight="Bold" Margin="0,0,0,5"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider Grid.Column="0"
                                            Minimum="10"
                                            Maximum="200"
                                            Value="{Binding InputDelay}"
                                            TickFrequency="10"
                                            IsSnapToTickEnabled="True"
                                            VerticalAlignment="Center"/>
                                    <TextBlock Grid.Column="1"
                                               Text="{Binding InputDelay, StringFormat={}{0} ms}"
                                               Width="80"
                                               TextAlignment="Right"
                                               VerticalAlignment="Center"
                                               Margin="10,0,0,0"/>
                                </Grid>
                                <TextBlock Text="每个字符输入之间的延迟时间，增加延迟可以提高兼容性"
                                           Foreground="#757575"
                                           FontSize="11"
                                           TextWrapping="Wrap"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 启动设置 -->
                        <GroupBox Header="启动选项" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox Content="开机自动启动"
                                          IsChecked="{Binding StartWithWindows}"
                                          Margin="0,0,0,10"/>
                                <CheckBox Content="启动时最小化到托盘"
                                          IsChecked="{Binding StartMinimized}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 托盘设置 -->
                        <GroupBox Header="系统托盘" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <CheckBox Content="最小化到托盘而不是任务栏"
                                          IsChecked="{Binding MinimizeToTray}"
                                          Margin="0,0,0,10"/>
                                <CheckBox Content="关闭窗口时最小化到托盘"
                                          IsChecked="{Binding CloseToTray}"/>
                            </StackPanel>
                        </GroupBox>

                        <!-- 语言设置 -->
                        <GroupBox Header="语言" Margin="0,0,0,20">
                            <StackPanel Margin="10">
                                <ComboBox SelectedItem="{Binding Language}"
                                          Height="30">
                                    <ComboBoxItem Content="简体中文" IsSelected="True"/>
                                    <ComboBoxItem Content="English" IsEnabled="False"/>
                                </ComboBox>
                                <TextBlock Text="需要重启应用程序以应用语言更改"
                                           Foreground="#757575"
                                           FontSize="11"
                                           Margin="0,5,0,0"/>
                            </StackPanel>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <!-- 关于 -->
            <TabItem Header="关于">
                <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="GameCheatHelper"
                               FontSize="24"
                               FontWeight="Bold"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,10"/>
                    <TextBlock Text="游戏秘籍快捷输入工具"
                               FontSize="14"
                               HorizontalAlignment="Center"
                               Foreground="#757575"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="版本: 1.0.0"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,5"/>
                    <TextBlock Text="支持游戏: 魔兽争霸3、星际争霸1"
                               FontSize="13"
                               HorizontalAlignment="Center"
                               Margin="0,0,0,20"/>
                    <TextBlock Text="Copyright © 2026 GameCheatHelper Team"
                               FontSize="11"
                               HorizontalAlignment="Center"
                               Foreground="#757575"
                               Margin="0,0,0,30"/>
                    <Border Background="#E3F2FD"
                            BorderBrush="{StaticResource PrimaryBrush}"
                            BorderThickness="1"
                            Padding="15"
                            CornerRadius="5">
                        <TextBlock TextWrapping="Wrap"
                                   FontSize="12"
                                   MaxWidth="400">
                            <Run Text="使用说明:" FontWeight="Bold"/>
                            <LineBreak/>
                            <LineBreak/>
                            <Run Text="1. 启动魔兽争霸3或星际争霸1游戏"/>
                            <LineBreak/>
                            <Run Text="2. 工具会自动检测游戏并注册热键"/>
                            <LineBreak/>
                            <Run Text="3. 在游戏中按下对应热键即可自动输入秘籍"/>
                            <LineBreak/>
                            <Run Text="4. 支持自定义秘籍和热键绑定"/>
                        </TextBlock>
                    </Border>
                </StackPanel>
            </TabItem>
        </TabControl>

        <!-- 底部按钮 -->
        <Border Grid.Row="1"
                Background="#F5F5F5"
                BorderBrush="#E0E0E0"
                BorderThickness="0,1,0,0"
                Padding="10">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="恢复默认"
                        Click="ResetButton_Click"
                        Width="100"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="保存"
                        Click="SaveButton_Click"
                        Width="100"
                        Height="32"
                        Margin="0,0,10,0"
                        Background="{StaticResource PrimaryBrush}"
                        Foreground="White"
                        BorderThickness="0"
                        Cursor="Hand"/>
                <Button Content="取消"
                        Click="CancelButton_Click"
                        Width="100"
                        Height="32"
                        Background="#E0E0E0"
                        BorderThickness="0"
                        Cursor="Hand"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
